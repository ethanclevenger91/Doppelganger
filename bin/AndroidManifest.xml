<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.Drake.doppelganger"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.Drake.doppelganger.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.Drake.doppelganger.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="edu.Drake.doppelganger.MoreInfo"
            android:label="@string/title_activity_more_info" >
        </activity>
        <activity
            android:name="edu.Drake.doppelganger.Post"
            android:label="@string/title_activity_post" >
        </activity>
        <activity
            android:name="edu.Drake.doppelganger.TakePicture"
            android:label="@string/title_activity_take_picture" >
        </activity>
        <activity 
            android:name="PickerActivity"
          	android:label="@string/app_name" >
        </activity>
        <activity    
            android:name="edu.Drake.doppelganger.Celebrities"
            android:label="@string/title_activity_celebrities"
             >
        </activity>
        <activity
            android:name="edu.Drake.doppelganger.Notifications"
            android:label="@string/title_activity_notifications" >
        </activity>
        <activity
            android:name="edu.Drake.doppelganger.Custom_CameraActivity"
            android:label="@string/title_activity_camerademo" >
        </activity>
        <activity
            android:name="edu.Drake.doppelganger.FacebookActivity"
            android:label="@string/title_activity_facebook" >
        </activity>
        <activity
            android:name="edu.Drake.doppelganger.SigninActivity"
            android:label="@string/title_activity_signin" >
        </activity>
        <activity
            android:name="edu.Drake.doppelganger.AddComment"
            android:label="@string/title_comment" >
        </activity>
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id"/>
        <activity android:name="com.facebook.LoginActivity" android:label="@string/app_name"></activity>
    </application>

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>