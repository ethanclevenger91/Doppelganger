<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TakePicture" >
    
    <Button
        android:id="@+id/button_return"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:onClick="returnSelection"
        android:scaleType="fitCenter"
        android:text="Use"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/localpic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@raw/takepicture" />

    <ImageButton
        android:id="@+id/gallery"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp"
        android:scaleType="fitCenter"
        android:src="@raw/gallery" />

    <ImageButton
        android:id="@+id/camera"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/button_return"
        android:layout_alignTop="@+id/gallery"
        android:onClick="cameraClick"
        android:scaleType="fitCenter"
        android:src="@raw/camera" />

</RelativeLayout>
